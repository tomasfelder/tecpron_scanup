<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.map.MapFragment"
    android:orientation="horizontal">
        <com.ortiz.touchview.TouchImageView
            android:id="@+id/img"
            android:layout_width="match_parent"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:layout_height="match_parent"/>

    <ImageView
        android:id="@+id/zoomIn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:clickable="true"
        android:contentDescription="hf_use_description|Zoom In"
        android:src="@android:drawable/screen_background_light_transparent" />

    <ImageView
        android:id="@+id/zoomOut"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:clickable="true"
        android:contentDescription="hf_use_description|Zoom Out"
        android:src="@android:drawable/screen_background_light_transparent" />

    <ImageView
        android:id="@+id/left"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:clickable="true"
        android:contentDescription="hf_use_description|Izquierda"
        android:src="@android:drawable/screen_background_light_transparent" />

    <ImageView
        android:id="@+id/right"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:clickable="true"
        android:contentDescription="hf_use_description|Derecha"
        android:src="@android:drawable/screen_background_light_transparent" />

    <ImageView
        android:id="@+id/up"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:clickable="true"
        android:contentDescription="hf_use_description|Arriba"
        android:src="@android:drawable/screen_background_light_transparent" />

    <ImageView
        android:id="@+id/down"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:clickable="true"
        android:contentDescription="hf_use_description|Abajo"
        android:src="@android:drawable/screen_background_light_transparent" />


</FrameLayout>